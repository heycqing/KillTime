{
  "name": "font-end-cqing",
  "version": "1.0.0",
  "description": "这是cqing的一个前端工程化的一个package配置",
  "main": "index.js",
  "config": {
    "port": 3000
  },
  "scripts": {
    "lint:js": "scripty",
    "lint:css": "scripty",
    "lint": "scripty",
    "test": "cross-env NODE_ENV=test mocha tests/**/*.js",
    "watch:test": "npm t --  --watch",
    "watch:lint": "onchange -i \"**/*.js\" \"**/*.scss\" \"**/*.html \"  -- npm run lint",
    "watch": "npm-run-all --parallel watch:*",
    "cover": "node scripts/cover.js",
    "cover:serve": "scripty",
    "cover:open": "scripty",
    "client": "npm-run-all --parallel client:*",
    "client:reload-server": "livereload page/",
    "client:static-serve": "http-server static/"
  },
  "author": "cqing <SiqingIII@163.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "cpr": "^3.0.1",
    "cross-env": "^5.2.0",
    "cross-var": "^1.1.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.3.0",
    "http-server": "^0.11.1",
    "jsonlint": "^1.6.3",
    "liveload": "^0.3.3",
    "livereload": "^0.7.0",
    "make-dir-cli": "^1.0.0",
    "markdownlint-cli": "^0.12.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "onchange": "^4.1.0",
    "opn": "^5.3.0",
    "opn-cli": "^3.1.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "scripty": "^1.7.2",
    "shelljs": "^0.8.2",
    "style-loader": "^0.22.1",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
